{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./*"]
    }
  }
}
